<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F4DA"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/name"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:hint="Enter Student Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#0B1301"
        android:textColorHint="#00796B"
        android:textColorLink="#130101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="382dp"
        android:layout_height="51dp"
        android:layout_marginBottom="280dp"
        android:ems="10"
        android:hint="Enter phone Number"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#00796B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name" />

    <Button
        android:id="@+id/button2"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginBottom="88dp"
        android:onClick="addUser"
        android:text="Add Student"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Delete" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewdata"
        android:text="View Student"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toStartOf="@+id/phone"
        app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="delete"
        android:text="Delete Student"
        app:layout_constraintBottom_toBottomOf="@+id/Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toEndOf="@+id/Delete"
        app:layout_constraintTop_toTopOf="@+id/Delete" />

    <EditText
        android:id="@+id/Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Enter Name to Delete"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#00796B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/phone" />

    <TextView
        android:id="@+id/info"
        android:layout_width="323dp"
        android:layout_height="256dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="26dp"
        android:clickable="true"
        android:linksClickable="true"
        android:longClickable="true"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="23dp"
        android:text="Updated info will shown here"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>